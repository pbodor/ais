{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "module": "commonjs",
        "mapRoot": "./",
        "moduleResolution": "node",
        "outDir": "../dist",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "typeRoots" : [
          "../node_modules/@types"
        ]
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!../node_modules/**"
    ],
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}
